<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.add_records.SelectedRecordsActivity">

    <ImageView
        android:id="@+id/coachmark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:elevation="@dimen/dp5"
        android:visibility="gone"
        tools:visibility="gone"
        app:srcCompat="@drawable/coachmark"/>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

     <include layout="@layout/common_action_bar"/>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_selected_records" />

</android.support.design.widget.CoordinatorLayout>
