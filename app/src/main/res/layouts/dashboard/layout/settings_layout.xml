<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:orientation="vertical"
        android:visibility="visible">

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp17"
            android:text="@string/setting_add_patient_form"
            android:textAllCaps="true"
            android:textColor="@color/Gray"
            android:textSize="@dimen/sp16"
            app:customFont="@string/roboto_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp56"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp35"
                android:paddingRight="@dimen/dp10">

                <com.rescribe.doctor.ui.customesViews.CustomTextView
                    android:id="@+id/textName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/setting_add_patient_header"
                    android:textColor="@color/tagColor"
                    android:textSize="@dimen/sp16"
                    app:customFont="@string/roboto_medium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.rescribe.doctor.ui.customesViews.SwitchButton
                        android:id="@+id/addPatientRadioSwitch"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:kswAnimationDuration="0"
                        app:kswTextOff="OFF"
                        app:kswTextOn="ON" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:background="@color/divider" />

            <LinearLayout
                android:id="@+id/showOtherSettingForOfflinePatient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp56"
                    android:paddingLeft="@dimen/dp35"
                    android:paddingRight="@dimen/dp10">

                    <com.rescribe.doctor.ui.customesViews.CustomTextView
                        android:id="@+id/addressDetailCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/address_details"
                        android:textColor="@color/tagColor"
                        android:textSize="@dimen/sp16"
                        app:customFont="@string/roboto_medium" />

                    <com.rescribe.doctor.ui.customesViews.SwitchButton
                        android:id="@+id/addressDetailSwitch"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:kswAnimationDuration="0"
                        app:kswTextOff="OFF"
                        app:kswTextOn="ON" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp56"
                    android:paddingLeft="@dimen/dp35"
                    android:paddingRight="@dimen/dp10">

                    <com.rescribe.doctor.ui.customesViews.CustomTextView
                        android:id="@+id/referenceDetailCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@string/roboto_medium"
                        android:text="@string/referenced_details"
                        android:textColor="@color/tagColor"
                        android:textSize="@dimen/sp16"
                        app:customFont="@string/roboto_medium" />

                    <com.rescribe.doctor.ui.customesViews.SwitchButton
                        android:id="@+id/referenceDetailSwitch"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:kswAnimationDuration="0"
                        app:kswTextOff="OFF"
                        app:kswTextOn="ON" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/divider" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp16"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dp17"
            android:paddingStart="@dimen/dp17"
            android:text="@string/other"
            android:textAllCaps="true"
            android:textColor="@color/Gray"
            android:textSize="@dimen/sp16"
            app:customFont="@string/roboto_regular" />

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp56"
            android:background="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start|center_vertical"
            android:paddingEnd="@dimen/dp35"
            android:paddingStart="@dimen/dp35"
            android:text="@string/change_password"
            android:textAllCaps="false"
            android:textColor="@color/tagColor"
            android:textSize="@dimen/sp16" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp56"
            android:background="@color/white"
            android:drawableEnd="@drawable/layer_5"
            android:drawableRight="@drawable/layer_5"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start|center_vertical"
            android:paddingEnd="@dimen/dp35"
            android:paddingStart="@dimen/dp35"
            android:text="@string/logout"
            android:textAllCaps="false"
            android:textColor="@color/tagColor"
            android:textSize="@dimen/sp16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/divider" />

</LinearLayout>