<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/dp10"
            android:src="@drawable/support_bg" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp12"
            android:text="@string/need_some_help"
            android:textColor="@color/black"
            android:textSize="@dimen/sp20"
            app:customFont="@string/roboto_medium" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp8"
            android:text="@string/feel_free"
            android:textColor="@color/grey_shade"
            android:textSize="@dimen/sp14"
            app:customFont="@string/roboto_medium" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/callTextView"
            android:layout_width="222dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/call_bg"
            android:gravity="center"
            android:text="@string/call"
            android:textColor="@color/white"
            android:textSize="@dimen/sp19"
            app:customFont="@string/roboto_bold" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/emailtextView"
            android:layout_width="222dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp10"
            android:background="@drawable/type_here_bg"
            android:gravity="center"
            android:text="@string/email"
            android:textColor="@color/tagColor"
            android:textSize="@dimen/sp19"
            app:customFont="@string/roboto_bold" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:textSize="@dimen/sp13"
                android:id="@+id/rescribeTagLine"
                android:layout_width="wrap_content"
                android:textColor="@color/logo_color"
                android:layout_height="wrap_content"
                android:src="@drawable/scrog_product"
                app:customFont="@string/roboto_regular"
                android:text="Doctor Rescribe is a unique product of" />

            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:textSize="@dimen/sp13"
                android:id="@+id/taglinesecond"
                android:textColor="@color/logo_color"
                app:customFont="@string/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rescribeTagLine"
                android:layout_gravity="center"
                android:src="@drawable/scrog_product"
                android:text="SCORG TECHNOLOGIES Pvt.Ltd." />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>