<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp16"
    android:layout_marginEnd="@dimen/dp6"
    android:layout_marginLeft="@dimen/dp16"
    android:layout_marginRight="@dimen/dp6"
    android:layout_marginTop="@dimen/dp16"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--  ListRow Left sied Thumbnail image -->
        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp5"
            android:padding="3dip">

            <ImageView
                android:id="@+id/imageOfDoctor"
                android:layout_width="@dimen/dp40"
                android:layout_height="@dimen/dp40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp16"
                android:src="@drawable/layer_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/thumbnail"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <!-- Title Of Song-->
            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/doctorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginTop="1dip"
                android:textColor="@color/vitals_name"
                android:textSize="@dimen/sp15"
                app:customFont="@string/roboto_bold" />

            <!-- Artist Name -->
            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorType"
                android:layout_toRightOf="@+id/thumbnail"
                android:textColor="@color/black"
                android:textSize="@dimen/sp17"
                app:customFont="@string/roboto_bold" />

            <!-- Rightend Duration -->
            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/onlineStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/doctorName"
                android:layout_toRightOf="@+id/thumbnail"
                android:gravity="right"
                android:textSize="@dimen/sp12"
                app:customFont="@string/roboto_medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/paidStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:customFont="@string/roboto_bold"
                android:textSize="@dimen/sp11"
                android:textColor="@color/green_light"
                android:layout_marginRight="@dimen/dp16"

              />
        </LinearLayout>

    </LinearLayout>


    <!--   <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp1"
           android:layout_marginTop="@dimen/dp16"
           android:background="@color/divider"/>-->
</LinearLayout>