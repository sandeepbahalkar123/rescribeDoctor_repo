<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp56"
        android:layout_marginBottom="@dimen/dp7"
        android:background="@color/tagColor"
        android:orientation="vertical">

        <com.rescribe.doctor.ui.customesViews.EditTextWithDeleteButton
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible"
            app:hintText="@string/search"
            app:textSize="@dimen/sp17" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/recentblue"
            android:dividerHeight="@dimen/dp2"
            android:visibility="gone"
            tools:visibility="visible" />

        <include
            layout="@layout/common_no_records_found"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
