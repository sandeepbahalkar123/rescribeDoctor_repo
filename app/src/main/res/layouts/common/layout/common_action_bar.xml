<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp56"
        android:background="@color/tagColor">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:paddingStart="@dimen/dp14"
            android:paddingEnd="@dimen/dp10"
            android:paddingTop="@dimen/dp6"
            android:src="@drawable/back_arrow_a_01"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp10" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp14"
            android:layout_toRightOf="@id/backImageView"
            android:paddingLeft="@dimen/dp16"
            android:paddingStart="@dimen/dp16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp17"
            app:customFont="@string/roboto_bold"
            tools:text="Appointments" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/userInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_marginBottom="@dimen/dp2"
            android:layout_toRightOf="@id/backImageView"
            android:paddingLeft="@dimen/dp16"
            android:paddingStart="@dimen/dp16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            app:customFont="@string/roboto_bold"
            tools:text="36 yrs - Male"
            tools:visibility="visible" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/dateTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp14"
            android:layout_toEndOf="@id/userInfoTextView"
            android:layout_toRightOf="@id/userInfoTextView"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp6"
            android:paddingEnd="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"
            android:visibility="gone"
            app:customFont="@string/roboto_medium"
            tools:text="27th Dec '17"
            tools:visibility="visible" />
        <Spinner
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.2"
            android:layout_marginTop="@dimen/dp14"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            android:visibility="gone"
            tools:visibility="visible"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

        <ImageView
            android:id="@+id/addImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp14"
            android:gravity="right"
            android:src="@drawable/bsp_ic_add_circle_24dp"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp6"
            android:paddingEnd="@dimen/dp16"
            android:paddingRight="@dimen/dp16"
            android:visibility="gone"
            tools:visibility="visible" />
    </RelativeLayout>

</LinearLayout>
