<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/dp4">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/referredByTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/dp4"
        android:layout_weight="1"

        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:visibility="visible"
        app:theme="@style/text_edit">

        <EditText
            android:id="@+id/referredBy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/roboto_regular"
            android:gravity="center|left"
            android:hint="@string/name"
            android:maxLength="50"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sp16" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/referredPhoneTextInputLayout"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:visibility="visible"
        app:theme="@style/text_edit">

        <EditText
            android:id="@+id/referredPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center|left"
            android:hint="@string/enter_mobile_no"
            android:inputType="number"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sp16" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/referredEmailTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:visibility="visible"
        app:theme="@style/text_edit">

        <EditText
            android:id="@+id/referredEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center|left"
            android:hint="@string/enter_email_id"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/sp16" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>