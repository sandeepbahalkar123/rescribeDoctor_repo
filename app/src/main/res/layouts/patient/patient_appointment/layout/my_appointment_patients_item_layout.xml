<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hospitalDetailsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.rescribe.doctor.ui.customesViews.CircularImageView
            android:id="@+id/bulletImageView"
            android:layout_width="@dimen/dp8"
            android:layout_height="@dimen/dp8"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/circular_bullet" />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/clinicNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/bulletImageView"
            android:layout_toRightOf="@id/bulletImageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            app:customFont="@string/roboto_bold"
            tools:text="Shree Clinic - " />

        <com.rescribe.doctor.ui.customesViews.CustomTextView
            android:id="@+id/clinicAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/clinicNameTextView"
            android:layout_toLeftOf="@+id/groupCheckbox"
            android:layout_toRightOf="@id/clinicNameTextView"
            android:layout_toStartOf="@+id/groupCheckbox"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="@dimen/dp4"
            android:paddingRight="@dimen/dp4"
            android:paddingTop="@dimen/dp3"
            android:textColor="@color/clinic_address_color"
            android:textSize="@dimen/sp13"
            app:customFont="@string/roboto_medium"
            tools:text="Worli, Mumbaifgfdgfdgfgffvf" />

        <LinearLayout
            android:id="@+id/downArrowClickLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:orientation="horizontal"
            android:padding="@dimen/dp4"
            tools:ignore="RelativeOverlap">

            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/clinicPatientCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/sp16"
                app:customFont="@string/roboto_bold"
                tools:ignore="ObsoleteLayoutParam"
                tools:text="06" />

            <ImageView
                android:id="@+id/downArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_toEndOf="@id/clinicPatientCount"
                android:layout_toRightOf="@id/clinicPatientCount"
                android:paddingLeft="@dimen/dp3"
                android:paddingStart="@dimen/dp3"
                app:srcCompat="@drawable/appointment_count_arrow"
                tools:ignore="ContentDescription,ObsoleteLayoutParam"
                android:visibility="gone"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/upArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_toEndOf="@id/clinicPatientCount"
                android:layout_toRightOf="@id/clinicPatientCount"
                android:paddingLeft="@dimen/dp3"
                android:paddingStart="@dimen/dp3"
                android:scaleY="-1"
                app:srcCompat="@drawable/appointment_count_arrow"
                android:visibility="gone"
                tools:visibility="visible"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/groupCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp6"
            android:layout_marginRight="@dimen/dp6"
            android:layout_toLeftOf="@id/downArrowClickLinearLayout"
            android:layout_toStartOf="@id/downArrowClickLinearLayout"
            android:button="@drawable/checkboxselecter"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

    <com.rescribe.doctor.ui.customesViews.swipeable_recyclerview.SwipeRevealLayout
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        app:dragEdge="right"
        app:mode="same_level">

        <FrameLayout
            android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp4"
                android:background="@drawable/result_white_box_copy"
                android:orientation="vertical">

                <Button
                    android:id="@+id/appointmentComplete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/transparent"
                    android:text="@string/appointment_completed_button"
                    android:textColor="@color/tagColor"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="@dimen/dp3"
                    android:layout_marginStart="@dimen/dp3"
                    android:background="@color/tagColor" />

                <Button
                    android:id="@+id/appointmentCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/Red"
                    android:textAllCaps="false"
                    android:background="@color/transparent"
                    android:text="@string/appointment_cancelled_button"
                    android:layout_weight="1"/>

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/front_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp4"
                android:background="@drawable/result_white_box"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp12">

                    <ImageView
                        android:id="@+id/bluelineImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp2"
                        android:paddingStart="@dimen/dp2"
                        android:paddingTop="@dimen/dp2"
                        app:srcCompat="@drawable/result_blue_line"
                        tools:ignore="ContentDescription,RtlSymmetry" />

                    <com.rescribe.doctor.ui.customesViews.CustomTextView
                        android:id="@+id/patientIdTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/bluelineImageView"
                        android:layout_toRightOf="@id/bluelineImageView"
                        android:paddingLeft="@dimen/dp13"
                        android:paddingStart="@dimen/dp13"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp13"
                        app:customFont="@string/roboto_medium"
                        tools:ignore="RtlSymmetry"
                        tools:text="ID: 23456" />

                    <com.rescribe.doctor.ui.customesViews.CustomTextView
                        android:id="@+id/appointmentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:background="@drawable/curve_edges_button"
                        android:gravity="center"
                        android:padding="@dimen/dp5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14"
                        android:visibility="invisible"
                        app:customFont="@string/roboto_bold"
                        tools:text="03:20 pm"
                        tools:visibility="invisible" />
                    <ImageView
                        android:id="@+id/waitingIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_toLeftOf="@+id/appointmentTime"
                        android:layout_toStartOf="@+id/appointmentTime"
                        app:srcCompat="@drawable/waiting"
                        android:visibility="gone"
                        tools:ignore="ContentDescription"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/chatImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        app:srcCompat="@drawable/chat_icon"
                        android:visibility="gone"
                        tools:ignore="ContentDescription"
                        tools:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/patientDetailsClickLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp6">

                    <com.rescribe.doctor.ui.customesViews.CircularImageView
                        android:id="@+id/patientImageView"
                        android:layout_width="@dimen/dp67"
                        android:layout_height="@dimen/dp67"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp10"
                        tools:src="@drawable/uren_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp11"
                        android:layout_marginStart="@dimen/dp11"
                        android:layout_toEndOf="@id/patientImageView"
                        android:layout_toRightOf="@id/patientImageView"
                        android:orientation="vertical"
                        tools:ignore="RelativeOverlap">

                        <com.rescribe.doctor.ui.customesViews.CustomTextView
                            android:id="@+id/patientNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp15"
                            app:customFont="@string/roboto_bold"
                            tools:text="Mr. Uren Chhadva" />

                        <LinearLayout
                            android:id="@+id/patientDetailsLinearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.rescribe.doctor.ui.customesViews.CustomTextView
                                android:id="@+id/patientAgeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp12"
                                app:customFont="@string/roboto_medium"
                                tools:text="36 yrs -" />

                            <com.rescribe.doctor.ui.customesViews.CustomTextView
                                android:id="@+id/patientGenderTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/rating_color"
                                android:textSize="@dimen/sp12"
                                app:customFont="@string/roboto_medium"
                                tools:text=" Male" />
                        </LinearLayout>

                        <com.rescribe.doctor.ui.customesViews.CustomTextView
                            android:id="@+id/opdTypeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/rating_color"
                            android:textSize="@dimen/sp12"
                            app:customFont="@string/roboto_medium"
                            tools:text="OPD Completed" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp16"
                        android:layout_marginRight="@dimen/dp16"
                        android:button="@drawable/checkboxselecter"
                        android:padding="@dimen/dp4"
                        android:visibility="gone"
                        tools:visibility="visible" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginEnd="@dimen/dp2"
                    android:layout_marginStart="@dimen/dp2"
                    android:background="@color/tagColor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:layout_marginBottom="@dimen/dp8">

                    <com.rescribe.doctor.ui.customesViews.CustomTextView
                        android:id="@+id/patientPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp28"
                        android:layout_marginStart="@dimen/dp28"
                        android:drawableLeft="@drawable/mobile_icon"
                        android:drawablePadding="@dimen/dp9"
                        android:drawableStart="@drawable/mobile_icon"
                        android:textColor="@color/rating_color"
                        android:textSize="@dimen/sp12"
                        app:customFont="@string/roboto_medium"
                        tools:ignore="RtlHardcoded"
                        tools:text="987678999" />

                    <View
                        android:id="@+id/separatorView"
                        android:layout_width="@dimen/dp1"
                        android:layout_height="@dimen/dp20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp32"
                        android:layout_marginStart="@dimen/dp32"
                        android:layout_toEndOf="@id/patientPhoneNumber"
                        android:layout_toRightOf="@id/patientPhoneNumber"
                        android:background="@color/tagColor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp20"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginStart="@dimen/dp20"
                        android:layout_toEndOf="@id/separatorView"
                        android:layout_toRightOf="@id/separatorView"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.rescribe.doctor.ui.customesViews.CustomTextView
                            android:id="@+id/outstandingAmountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp11"
                            app:customFont="@string/roboto_medium"
                            tools:text="Outstanding Amount:" />

                        <com.rescribe.doctor.ui.customesViews.CustomTextView
                            android:id="@+id/payableAmountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/rating_color"
                            android:textSize="@dimen/sp12"
                            app:customFont="@string/roboto_bold"
                            tools:text=" Rs.450/-" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </com.rescribe.doctor.ui.customesViews.swipeable_recyclerview.SwipeRevealLayout>
</LinearLayout>
