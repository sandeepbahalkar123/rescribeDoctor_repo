<!-- NOTE: should use FrameLayout or RelativeLayout for parent of the "@id/container" view (for Android 2.3 compatibility) -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/bg_swipe_item_neutral">

    <LinearLayout
        android:id="@+id/behind_views"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_swipe_item_gray"
        android:visibility="gone"
        android:gravity="end"
        android:orientation="vertical"
        tools:visibility="visible">

        <Button
            android:id="@android:id/button1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Button1"/>

        <Button
            android:id="@android:id/button2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Button2"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_item_normal_state"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        tools:ignore="UselessParent">

        <!-- NOTE: the drag handle should set android:clickable=true not to propagate click events to the parent views -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_drag_handle_black_24dp"
            android:layout_gravity="top|right"
            android:layout_margin="16dp"
            android:clickable="true"/>

        <TextView
            android:id="@android:id/text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_marginRight="64dp"
            android:gravity="center"
            tools:ignore="RtlHardcoded"/>

    </FrameLayout>

</FrameLayout>