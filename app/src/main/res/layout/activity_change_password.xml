<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ChangePasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"/>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <include layout="@layout/common_action_bar" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/oldPasswordEditText"
                style="@style/AppLoginNewMainStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Enter Current Password"
                android:inputType="textPassword"
                app:layout_constraintBottom_toTopOf="@+id/newPasswordEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/newPasswordEditText"
                style="@style/AppLoginNewMainStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/reEnterNewPassword"
                style="@style/AppLoginNewMainStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:fontFamily="@font/roboto_medium"
                android:hint="Re-enter New Password "
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/oldPasswordEditText"
                app:layout_constraintStart_toStartOf="@+id/oldPasswordEditText"
                app:layout_constraintTop_toBottomOf="@+id/oldPasswordEditText" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/newPasswordEditText"
                app:layout_constraintStart_toStartOf="@+id/newPasswordEditText"
                app:layout_constraintTop_toBottomOf="@+id/newPasswordEditText" />

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/blue"
                app:layout_constraintEnd_toEndOf="@+id/reEnterNewPassword"
                app:layout_constraintStart_toStartOf="@+id/reEnterNewPassword"
                app:layout_constraintTop_toBottomOf="@+id/reEnterNewPassword" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp40"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="32dp"
                android:background="@color/login_bg_color"
                android:fontFamily="@font/roboto_medium"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reEnterNewPassword" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</RelativeLayout>