<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButtonMice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/transparent"
            app:srcCompat="@drawable/microphone_voice" />

        <RelativeLayout
            android:id="@+id/layoutSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButtonMice"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginRight="@dimen/dp10">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TextInputLayoutSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp5">

                <AutoCompleteTextView
                    android:id="@+id/editSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/search"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="@dimen/sp13" />

            </android.support.design.widget.TextInputLayout>




            <!--<EditText-->
                <!--android:id="@+id/editSearch"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="@string/search"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:textCursorDrawable="@drawable/cursor_color_blue"-->
                <!--android:textSize="@dimen/sp15" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_below="@id/TextInputLayoutSearch"
                android:background="@color/grey" />

            <ImageButton
                android:id="@+id/imageButtonAddMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:padding="@dimen/dp5"
                android:src="@drawable/ic_add_action"
                android:tint="@color/black" />

            <ImageButton
                android:id="@+id/imageButtonClare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_toLeftOf="@id/imageButtonAddMore"
                android:background="@color/transparent"
                android:padding="@dimen/dp5"
                android:src="@drawable/close_btn"
                android:tint="@color/black" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutSearch"
            android:layout_above="@id/footer"
            android:layout_margin="@dimen/dp10"
            />

    </RelativeLayout>


</LinearLayout>