<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp56">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/recentblue"
            android:orientation="horizontal"
            android:visibility="visible">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp16"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp" />

            <com.rescribe.doctor.ui.customesViews.CustomTextView
                android:id="@+id/webViewTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dp18"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                tools:text="Title" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|right"
                android:padding="@dimen/dp10"
                android:visibility="gone"
                app:srcCompat="@drawable/bookmark_line" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7e7e7"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/mainParentScrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp16"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/mainParentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.rescribe.doctor.ui.customesViews.CircularImageView
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/dp100"
                        android:layout_height="@dimen/dp100"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/dp10"
                        app:border="true"
                        app:border_color="@color/white"
                        app:border_width="@dimen/dp1"
                        app:shadow="true"
                        app:srcCompat="@drawable/default_profile_pic" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_weight="1"
                            android:background="@null"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            app:theme="@style/text_edit">

                            <EditText
                                android:id="@+id/editName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center|left"
                                android:hint="@string/name"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="@dimen/sp16" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black"></View>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="vertical">

                            <com.rescribe.doctor.ui.customesViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center|left"
                                android:text="@string/gender"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp14" />
                            <Spinner
                                android:id="@+id/bloodGroupSpinner"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:entries="@array/mr_gender_entries"/>

                        </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutContactNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:theme="@style/text_edit">

                        <EditText
                            android:id="@+id/mobNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center|left"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/sp16"
                            android:hint="@string/enter_ref_mobile_no" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutWebUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:theme="@style/text_edit">

                        <EditText
                            android:id="@+id/editWebUrl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center|left"
                            android:hint="@string/web_url"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/sp16" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutSpeciality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:theme="@style/text_edit">

                        <EditText
                            android:id="@+id/editSpeciality"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center|left"
                            android:hint="@string/speciality"
                            android:inputType="text"
                            android:maxLength="100"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/sp16" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:theme="@style/text_edit">

                        <EditText
                            android:id="@+id/editEducation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center|left"
                            android:hint="@string/education"
                            android:inputType="text"
                            android:maxLength="50"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/sp16" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black" />
                </LinearLayout>




                <LinearLayout
                    android:id="@+id/layoutExprince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        app:theme="@style/text_edit">

                        <EditText
                            android:id="@+id/editExprince"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:focusable="false"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center|left"
                            android:hint="@string/education"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/sp16" />

                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp10"
                        android:background="@null"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:visibility="visible"
                        app:theme="@style/text_edit">

                        <EditText
                            android:id="@+id/editAbout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="@string/about"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/sp16"
                            android:inputType="text|textMultiLine"
                            android:lines="10"
                            android:minLines="5"
                            android:gravity="top|left"
                            android:maxLines="15"

                            />

                    </android.support.design.widget.TextInputLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:background="@color/black"></View>


                </LinearLayout>




                <Button
                    android:id="@+id/btnAddPatientSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp16"
                    android:background="@color/tagColor"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>
        </ScrollView>

        <WebView
            android:id="@+id/webViewLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>



