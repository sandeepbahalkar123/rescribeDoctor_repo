<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.add_opd.PrescriptionFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/miceButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="@dimen/dp8"
            android:contentDescription="@string/mice"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/microphone_voice"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="40dp" />

        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="@dimen/dp8"
            android:contentDescription="@string/add"
            app:srcCompat="@drawable/bsp_ic_add_circle_view_24dp"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="40dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>